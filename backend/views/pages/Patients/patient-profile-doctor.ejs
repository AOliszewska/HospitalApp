<%- include('../../fragments/header.ejs') %>
<main>
    <script type="application/javascript" src="/JS/validationFormPatient.js"></script>
    <h2 > <%=pageTitle%>  </h2>
    <form class="form" method="post" novalidate onsubmit="return validationForm();" action="<%=formAction%>">
                 <input type="hidden" name="_idUzytkownik" id="_idUzytkownik"  value="<%=users._idUzytkownik%>" >

                 <label for="imie"> ImiÄ™: <span class="symbol-required">*</span> </label>
                   <input type="text" name="imie" id="imie"  value="<%=users.imie%> ">
                    <span id="errorImie" class="error-text"></span>

                 <label for="nazwisko"> Nazwisko: <span class="symbol-required">*</span>  </label>
                  <input type="text" name="nazwisko" id="nazwisko"  value="<%=users.nazwisko%>" >
                    <span id="errorNazwisko" class="error-text"></span>

                  <label for="email"> Email: <span class="symbol-required">*</span>  </label>
                  <input type="text" name="email" id="email" value="<%=users.email%>" >
                    <span id="errorEmail" class="error-text"></span>

                 <label for="miejsceZamieszkania"> Adres Zamieszkania: <span class="symbol-required">*</span> </label>
                   <input type="text" name="miejsceZamieszkania" id="miejsceZamieszkania" value="<%=users.miejsceZamieszkania%>" >
                    <span id="errorAdresZamieszkania" class="error-text"> </span>

                 <label for="telefon"> Telefon: </label>
                    <input type="text" name="telefon" id="telefon" value="<%=users.telefon%>" >
                    <span id="errorTelefon" class="error-text"></span>

                 <label for="pesel"> Pesel:  </label>
                  <input type="text" name="pesel" id="pesel" value="<%=users.pesel%>" >
                    <span id="errorPesel" class="error-text"></span>

                 <label for="dataUrodzenia"> Data Urodzenia: <span class="symbol-required">*</span> </label>
                 <input type="date"  name="dataUrodzenia" id="dataUrodzenia" value="<%= users.dataUrodzenia ? users.dataUrodzenia.toISOString().split('T')[0]: ' '%>">
                <span id="errordataUrodzenia" class="error-text"></span>

        <div class="button-wrapper">
            <%if (formMode=='edit') {%>
            <p id="errorSummary"> </p>
            <input type="submit" value="<%=btnLabel%>" id="submit" style="color:black"/>
                <a href="/Pacjenci" >Anuluj</a>
            <%}%>
        </div>
    </form>
</main>
<%- include('../../fragments/footer.ejs') %>