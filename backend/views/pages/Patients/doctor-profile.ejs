            <td><%= loggedUser.miejsceZamieszkania%></td>
        </tr>
        <tr>
            <td><%= __('user.fields.telephone') %></td>
            <td><%= loggedUser.telefon%></td>
        </tr>
        <tr>
            <td ><%= __('user.fields.pesel') %></td>
            <td><%= loggedUser.pesel%></td>
        </tr>
        </tbody>
    </table>
