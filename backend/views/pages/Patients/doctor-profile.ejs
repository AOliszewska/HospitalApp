<%- include('../../fragments/header.ejs') %>
<main>
    <h2 > <%= pageTitle %> </h2>
    <table class="table-horizontal" >
        <tbody>
        <tr>
            <td><%= __('user.fields.firstName') %></td>
            <td><%= loggedUser.imie%></td>
        </tr>

        <tr>
            <td ><%= __('user.fields.lastName') %></td>
            <td><%= loggedUser.nazwisko%></td>
